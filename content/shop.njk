<div class="mx-6 my-6">
  <product-listings class="grid grid-cols-1 gap-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
  </product-listings>
</div>

<template id="product-listing-template">
  <a href="javascript:void(0);" class="block h-full mb-6 focus:ring-4 focus:ring-blue-300 focus:outline-none">
    <div class="relative">
      <slot name="product-image">
        <img src="" alt="" class="object-cover aspect-square w-full bg-stone-300" loading="lazy">
      </slot>
      <slot name="product-sold">
        <div class="absolute top-5 right-0 bg-stone-950 custom-text-pure-white uppercase p-2">Sold Out</div>
      </slot>
    </div>
    <div class="px-1">
      <slot name="product-name" class="block">PRODUCT NAME</slot>
      <slot name="product-amount" class="block">PRODUCT AMOUNT</slot>
    </div>
  </a>
</template>

